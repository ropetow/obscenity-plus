source "https://rubygems.org"

# Development and testing dependencies
group :development, :test do
  gem "rspec-rails", "~> 5.0"            # Modern testing framework
  gem "factory_bot_rails", "~> 6.0"      # Fixtures for testing
  gem "rubocop", "~> 1.0", require: false # Linter for Ruby
  gem "pry", "~> 0.14"                   # Interactive debugging
end

# Gems required for gem development
group :development do
  gem "bundler", "~> 2.0"                # Bundler for dependency management
  gem "rake", "~> 13.0"                  # Task management
end

# Application dependencies
gem "activemodel", "~> 8.0"              # Matches Rails 8+
gem "rack", "~> 3.0"                     # Middleware for modern Rails

gem "rspec", "~> 3.13"
